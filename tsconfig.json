{
  "compilerOptions": {
    "strict": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "@style/*": ["src/style/*"],
      "@layouts/*": ["src/layouts/*"],
      "@containers/*": ["src/containers/*"],
      "@config/*": ["src/config/*"],
      "@components/*": ["src/components/*"],
      "@hooks/*": ["src/hooks/*"],
      "@utils/*": ["src/utils/*"],
      "@context/*": ["src/context/*"],
      "@queries/*": ["src/queries/*"],
      "@store/*": ["src/store/*"]
    }
  }
}
